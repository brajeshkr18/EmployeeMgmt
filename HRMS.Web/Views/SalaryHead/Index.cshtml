@model IEnumerable<HRMS.ViewModel.SalaryHeadViewModel>

@{
                /**/

                /**/

                /**/

                ViewBag.Title = "SalaryHead";
                Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title">Dashboard</h4>
                <div class="ml-auto text-right">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Library</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <!-- ============================================================== -->
        <!-- Start Page Content -->
        <!-- ============================================================== -->
        <div class="row">
            <div class="col-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Salary History </h5>
                        @Html.ActionLink("Add Salary History", "Edit", "SalaryHistory", new { id = 0 })

                    </div>
                    <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Head_Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Rate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Activity)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Head_Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Rate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Activity)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                                    @*@Html.ActionLink("Delete", "Delete", new { id=item.ID })*@
                                    <i class="mdi mdi-delete" style="font-size:20px;color:red" onclick="btndelete(@item.ID)"></i>
                                </td>
                            </tr>
                        }

                    </table>
                </div>

            </div>
        </div>

    </div>
</div>
<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true" id="mi-modal">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Do you want to delete this </h4>
            </div>
            <div class="modal-footer">
                @*<a class="btn btn-default" id="modal-btn-ok" href="~/Employee_Type/delete">Yes</a>*@
                <button type="button" class="btn btn-default" id="modal-btn-ok" val='' onclick="OkClick()">Yes</button>
                <button type="button" class="btn btn-primary" id="modal-btn-no" onclick="OnCancel()">No</button>
            </div>
        </div>
    </div>
</div>
<script>
    function btndelete(id) {

        $("#mi-modal").modal('show');
        $('#modal-btn-ok').attr('val', id);
    };

    function OkClick() {

        $.ajax({ //Do an ajax post to the controller
            type: 'POST',
            url: '/SalaryHead/Delete/?id=' + $('#modal-btn-ok').attr("val"),
            //data: JSON.stringify(JSONObject),
            contentType: "application/json; charset=utf-8",
            dataType: "json"
        });

        $("#mi-modal").modal('hide');
        location.reload();
    };

    function OnCancel() {
        //callback(false);
        $("#mi-modal").modal('hide');
        debugger;
    };
</script>