@model IEnumerable<MVCFinalProject.Models.Section>

@{
    ViewBag.Title = "Section";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Section</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Section_Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Section_Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.SecID }) |
            @Html.ActionLink("Details", "Details", new { id=item.SecID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.SecID })
        </td>
    </tr>
}

</table>
